<%-include ('../layouts/header.ejs')-%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Class Management
        </h1>
    </section>

    <!-- Main content -->
    <main class="main-container container">
        <div class="view-account">
            <section class="module">
                <div class="module-inner">
                    <div class="content-panel">
                        <form class="form-horizontal" method="POST">
                            <fieldset class="fieldset">
                                <h3 class="fieldset-title">New Email</h3>

                                <div class="form-group" style="font-size: 20px;">
                                    <label class="col-md-2 col-sm-3 col-xs-12 control-label">To:</label>
                                    <div class="col-md-8 col-sm-9 col-xs-12">
                                        <textarea name="email" cols="50" rows="1"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-3 col-xs-12 control-label">Subject:</label>
                                    <div class="col-md-8 col-sm-9 col-xs-12">
                                        <textarea name="subject" required placeholder="Subject"></textarea>
                                        <script>
                                            CKEDITOR.replace('subject');
                                        </script>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 col-sm-3 col-xs-12 control-label">Content:</label>
                                    <div class="col-md-8 col-sm-9 col-xs-12">
                                        <textarea name="content" required placeholder="Content"></textarea>
                                        <script>
                                            CKEDITOR.replace('content');
                                        </script>
                                    </div>
                                </div>
                            </fieldset>
                            <hr>
                            <div class="form-group">
                                <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                                    <input class="btn btn-primary" type="submit" value="Send">
                                    <a class="btn btn-danger" href="/staff/Account/<%=data.role%>" role="button">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%-include ('../layouts/footer')-%>