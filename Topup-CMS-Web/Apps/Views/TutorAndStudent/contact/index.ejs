<%-include('../layouts/header.ejs')-%>

<!-- Main content -->
<main class="main-container container">
    <div class="view-account">
        <section class="module">
            <div class="module-inner">
                <div class="content-panel">
                    <form class="form-horizontal" method="POST">
                        <fieldset class="fieldset" style="font-size: 20px; border-bottom: 1px solid blue;">
                            <br> <br>
                            <div class="table-responsive" style="border: 1px solid black; font-size: 15px;">
                                <h5>List staff</h5>
                                 <table class="table table-striped table-hover">
                                    <tr>
                                       <th>Full Name</th>
                                       <th>Email</th>
                                    </tr>
                                    <tr>
                                        <%data.Staff.forEach(staff=>{%>
                                       <th><%=staff.User_full%></th>
                                       <td name="staff"><%=staff.User_mail%></td>
                                    </tr>
                                    <%})%>
                                 </table>
                             </div>
                        </fieldset>
                        <br> <br>
                        <%if(data.err){%>
                            <span class="col-md-3 col-sm-3 col-xs-12 alert alert-danger"><%=data.err%></span>
                            <%}%>
                        <fieldset class="fieldset">
                            <h3 class="fieldset-title" style="text-align: center">Contact</h3>
                            <br> <br>
                            <div class="form-group" style="font-size: 20px;">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label">To:</label>
                                <div class="col-md-8 col-sm-9 col-xs-12">
                                    <input type="email" name="staff_mail" required placeholder="Enter Staff mail">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label"><span style="font-size: 17px;">Your Name:</span></label>
                                <div class="col-md-8 col-sm-9 col-xs-12">
                                    <input type="text" required placeholder="Enter your name" name="name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label"><span style="font-size: 17px;">Your ID:</span></label>
                                <div class="col-md-8 col-sm-9 col-xs-12">
                                   <input type="text" required placeholder="Enter Your ID" name="id">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label"><span style="font-size: 17px;">Your Email:</span></label>
                                <div class="col-md-8 col-sm-9 col-xs-12">
                                    <input type="email" required name="mail" placeholder="Enter Your mail">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label"><span style="font-size: 17px;">Content:</span></label>
                                <div class="col-md-8 col-sm-9 col-xs-12">
                                    <textarea name="content" cols="50" rows="1" required placeholder="Content"></textarea>
                                    <script>
                                        CKEDITOR.replace('content');
                                    </script>
                                </div>
                            </div>
                        </fieldset>
                        <hr>
                        <div class="form-group">
                            <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                                <input class="btn btn-success" type="submit" value="Send" role="button">
                                <a class="btn btn-danger" role="button" href="">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</main>
<!-- /.content -->

<%-include('../layouts/footer.ejs')-%>